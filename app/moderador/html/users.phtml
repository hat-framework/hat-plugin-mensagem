<div ng-controller="usuario_mensagem_usersCTRL" ng-hide="hideall">
    <div style='border:1px solid transparent;'>
        <button class="col-lg-6 btn" ng-click="setUsers()" ng-class="{'btn-primary':(last === 'users')}">Usuários</button>
        <button class="col-lg-6 btn" ng-click="setGroups()" ng-class="{'btn-primary':(last === 'groups')}">Grupos</button>
    </div>
    <div class="clearfix"></div>
    <div style="margin: 8px 0 8px 0;">
        <input type="text" 
               placeholder="Buscar Usuários" 
               class="form-control" 
               ng-show="(last === 'users' && !hideForm)"
               ng-model="search"
               style="margin-top: 5px;"
        />
        <ul ng-show='active.length' >
            <li class="list-group-item"
                 ng-repeat="group in active" 
                 ng-class="{
                     'label-warning':group.unread,
                     'active'       :(isActive(group)) 
                 }"
                 ng-click="current(group)"
                 style="cursor: pointer;"
            >
                <a>
                    <span class="list-group-item-heading">{{getName(group)}}</span>
                    <span class="badge" ng-hide="!group.unread">{{group.unread}}</span>
                </a>
            </li>
        </ul>
        <button ng-click="loadMore()" ng-hide="hideButton()" class="span11">Mais Usuários</button>
    </div>
</div>